# Configurações de Produção para Docker
# Copie este arquivo para .env e ajuste conforme necessário

# Ambiente
NODE_ENV=production

# Porta do Backend
PORT=5000

# MongoDB Configuration
DB_URI=mongodb://admin:epugestao123@mongodb:27017/epu_gestao?authSource=admin
DB_NAME=epu_gestao

# JWT Configuration
JWT_SECRET=epu-gestao-jwt-secret-key-super-secure-2025
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE=app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=epu-gestao-session-secret-key-2025

# Email Configuration (opcional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu-email@gmail.com
# EMAIL_PASS=sua-senha-do-app
# EMAIL_FROM=noreply@epugestao.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Health Check
HEALTH_CHECK_INTERVAL=30000
