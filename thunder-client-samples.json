    "projects": {
      "createProject": {
        "url": "{{baseUrl}}/projects",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {{token}}",
          "Content-Type": "application/json"
        },
        "body": {
          "name": "Sistema de Gestão Acadêmica",
          "description": "Desenvolvimento de um sistema completo para gestão de atividades acadêmicas",
          "status": "planning",
          "priority": "high",
          "startDate": "2025-01-15T00:00:00.000Z",
          "endDate": "2025-06-30T00:00:00.000Z",
          "deadline": "2025-07-15T00:00:00.000Z",
          "budget": 50000,
          "team": [
            {
              "role": "developer",
              "joinedAt": "2025-01-15T00:00:00.000Z"
            }
          ],
          "tags": ["web", "academic", "management"],
          "attachments": [
            {
              "name": "project-requirements.pdf",
              "url": "https://example.com/files/requirements.pdf",
              "type": "document"
            }
          ]
        }
      },
      "getAllProjects": {
        "url": "{{baseUrl}}/projects",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "getProjectById": {
        "url": "{{baseUrl}}/projects/{{projectId}}",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "updateProject": {
        "url": "{{baseUrl}}/projects/{{projectId}}",
        "method": "PUT",
        "headers": {
          "Authorization": "Bearer {{token}}",
          "Content-Type": "application/json"
        },
        "body": {
          "status": "in-progress",
          "description": "Sistema completo para gestão de atividades acadêmicas - Fase de desenvolvimento iniciada"
        }
      },
      "deleteProject": {
        "url": "{{baseUrl}}/projects/{{projectId}}",
        "method": "DELETE",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "getUserProjects": {
        "url": "{{baseUrl}}/projects/user/{{userId}}",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "addTeamMember": {
        "url": "{{baseUrl}}/projects/{{projectId}}/team",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {{token}}",
          "Content-Type": "application/json"
        },
        "body": {
          "userId": "{{teamMemberId}}",
          "role": "designer"
        }
      },
      "removeTeamMember": {
        "url": "{{baseUrl}}/projects/{{projectId}}/team/{{teamMemberId}}",
        "method": "DELETE",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      }
    },
    "notices": {
      "createNotice": {
        "url": "{{baseUrl}}/notices",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {{token}}",
          "Content-Type": "application/json"
        },
        "body": {
          "title": "Manutenção Programada do Sistema",
          "content": "Informamos que haverá manutenção programada do sistema no dia 30/06/2025 das 02:00 às 06:00. Durante este período o sistema ficará indisponível.",
          "type": "maintenance",
          "priority": "high",
          "targetAudience": "all",
          "isPinned": true,
          "publishDate": "2025-06-26T00:00:00.000Z",
          "expiryDate": "2025-07-01T00:00:00.000Z",
          "tags": ["maintenance", "system", "downtime"],
          "attachments": [
            {
              "name": "maintenance-schedule.pdf",
              "url": "https://example.com/files/maintenance.pdf",
              "type": "document"
            }
          ]
        }
      },
      "getAllNotices": {
        "url": "{{baseUrl}}/notices",
