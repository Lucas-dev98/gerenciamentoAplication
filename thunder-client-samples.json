        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "updateNotice": {
        "url": "{{baseUrl}}/notices/{{noticeId}}",
        "method": "PUT",
        "headers": {
          "Authorization": "Bearer {{token}}",
          "Content-Type": "application/json"
        },
        "body": {
          "title": "Manutenção Programada do Sistema - ATUALIZADO",
          "content": "ATUALIZAÇÃO: A manutenção programada foi reagendada para 02/07/2025 das 02:00 às 06:00.",
          "priority": "critical"
        }
      },
      "deleteNotice": {
        "url": "{{baseUrl}}/notices/{{noticeId}}",
        "method": "DELETE",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "getActiveNotices": {
        "url": "{{baseUrl}}/notices/active",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "getPinnedNotices": {
        "url": "{{baseUrl}}/notices/pinned",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      },
      "getNoticesByType": {
        "url": "{{baseUrl}}/notices/type/{{noticeType}}",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer {{token}}"
        }
      }
    }
  },
